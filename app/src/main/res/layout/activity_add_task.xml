<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp"
        tools:context="com.aktar.sakifa.locationalarm.Add_Task">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/showLocation"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Click On The Location Image" />

            <ImageView
                android:id="@+id/mapViewButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mapicon" />
            <EditText
                android:id="@+id/latlang"
                android:visibility="invisible"
                android:layout_width="1dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="task details"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/getTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Type Your Task"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="time"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/getTime"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Click On The Clock Image" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/clock" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="date"
            android:textAllCaps="true"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/getDate"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Click On The Calender Image" />


            <ImageView
                android:id="@+id/calender"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/calendar" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/submit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add Task"
                android:padding="10dp"
                android:layout_weight="1"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="View"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="true" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>